
@{
    ViewBag.Title = "GetChart";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.2.2/Chart.bundle.min.js"></script>
<script>
    var barChartData =
    {
        labels: ["Red", "Blue", "Green"],
        datasets: [{
            label: 'ProductWise Sales Count',
            backgroundColor: [
                "#f990a7",
                "#aad2ed",
                "#9966FF",
                "#99e5e5",
                "#f7bd83",
            ],
            borderWidth: 2,
            data: [20, 40, 60]
        }]
    };
    var PieChartData =
    {
        labels: ["Red", "Blue", "Green"],
        datasets: [{
            label: 'ProductWise Sales Count',
            backgroundColor: [
                "#f990a7",
                "#aad2ed",
                "#9966FF",
                "#99e5e5",
                "#f7bd83",
            ],
            borderWidth: 2,
            data: [20, 40, 60]
        }]
    };

    window.onload = function () {
        var ctx1 = document.getElementById("Piecanvas").getContext("2d");
        var ctx2 = document.getElementById("barcanvas").getContext("2d");

        window.myBar = new Chart(ctx1,
            {
                type: 'pie',
                data: PieChartData,
                options:
                {
                    title:
                    {
                        display: true,
                        text: "ProductWise Sales Count"
                    },
                    responsive: true,
                    maintainAspectRatio: true
                }
            });
        window.myBar = new Chart(ctx2,
            {
                type: 'bar',
                data: barChartData,
                options:
                {
                    title:
                    {
                        display: true,
                        text: "ProductWise Sales Count"
                    },
                    responsive: true,
                    //maintainAspectRatio: true
                }
            });
    }
</script>
<body>
    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>
                                Bar Graph
                            </h4>
                            </div>
                            <div class="card-body">
                                <div style="text-align: center">
                                    <canvas id="barcanvas"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="card">
                    <div class="card-header">
                        <div class="card-header">
                            <h4>
                                Pie Chart
                            </h4>
                        </div>
                        <div class="card-body">
                            <div style="text-align: center">
                                <canvas id="Piecanvas"></canvas>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
    </section>
</body>


